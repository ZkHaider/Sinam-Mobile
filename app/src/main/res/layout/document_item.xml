<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/documentCard"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="275dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/documentMask"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:background="@color/colorAccent"
            android:id="@+id/documentInfoBox"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/documentTitle"
                android:text="Title"
                android:textColor="@android:color/white"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="216dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_edit"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_share"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_delete"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <TextView
                android:id="@+id/otherDocumentInfo"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/documentImage"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:transitionName="hero_event"
            android:adjustViewBounds="true"
            android:layout_above="@id/documentInfoBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</android.support.v7.widget.CardView>